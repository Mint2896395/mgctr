      <div class="card-block">
        <h4 class="card-title"><%= card[:name] %></h4>
        <br><b><u>Upright:</u></b><br><%= card[:description] %>
        <br><b><u>Reversed:</u></b><br><%= card[:value] %>
      </div>
    </div>
      </a>
      <%= render "tarot/comparemodal" %>
    <% end %>
     
