<div class="band">
<% @setting = Setting.first %>
  <% @name = @setting.setting01 %>
  <% @cardlibrary.where(library_id: @library.id).each do |card| %>
    <% if @setting.setting02 == "true" %>
      <a href="#compareAllModal" style="text-decoration: none;" class="organon-card-front" onclick= "compare(<%= card[:cardid] %>);" data-toggle="modal" data-target="#compareAllModal" data-card-id="<%= card[:cardid] %>">
      <div id="<%= card[:cardid] %>" class="card mx-auto">
      <img id="image" class="organon-card-front card-img-top img-fluid" src="/<%= @name %>/mycard<%=card[:cardid]%>.jpg" alt="" data-card-id="<%= card[:cardid] %>">
      
      <div class="card-block">
        <h4 class="card-title"><%= card[:name] %></h4>
        <br><%= card[:description] %>
        <br><b><u>Value:</u></b><%= card[:value] %>
        
      </div>
    </div>
      </a>
      <br><div style="position:absolute; width: 60px;">
        <%= link_to 'Edit', edit_cardlibrary_path(card.id) %>
